<div class="col-md-6 col-md-offset-3">
  <h1>編集ページ</h1>
  <div class="row">
    <%= form_for(@post) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control' %>

      <%= f.submit "更新", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
