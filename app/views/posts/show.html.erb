<div class="col-md-6 col-md-offset-3">
  <h1>詳細ページ</h1>
  <h3><%= @post.title %></h3>
  <h4><%= @post.content %></h4>
  <%= image_tag @post.picture.url if @post.picture? %>
  <p><%= link_to '編集', edit_post_path %></p>
  <p><%= link_to '削除', post_path(id: @post), method: 'delete', data: { comfirm: '本当に削除しますか？' } %></p>
</div>
